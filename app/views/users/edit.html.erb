<div class="container">

  <% if @user.errors.any? %>
  <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <div class ="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label><br>
          <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <label for="user_image">Image</label><br>
          <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %>
      </div>

      <div class="form-group">
         <label for="user_introduction">Introduction</label><br>
        <%= f.text_field :introduction %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update User' %>
      </div>
      <% end %>
    </div>
  </div>
</div>