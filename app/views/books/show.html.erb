
<%= render 'list', book:@book %>

<div class="col-md-8 offset-md-1">
      <h2>Books detail</h2>
      <table class="table table-hover table-inverse">

        <tbody>
          <tr>
            <!--できない-->
            <td><%= image_tag @user.get_profile_image(100, 100) %><br>
            <td><%= user.name %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            
            <td><%= link_to "Edit", edit_user_path(current_user.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Edit", destroy_book_path(current_user.id), class: "btn btn-sm btn-danger" %></td>
          </tr>
        </tbody>

      </table>
</div>




