<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <div class="info">
        <%= image_tag current_user.get_profile_image(100,100) %>
      </div>
      <table>
       <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
           </tr>
       </tbody>
      </table>
      <div class="row">
      <!--<a class="btn btn-outline-secondary btn-block" href="users#edit"><i class="fas fa-user-cog"></i></a>-->
        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>

      <form action="/books" accept-charset="UTF-8" method="post">

        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title %>
        </div>

         <div class="form-group">
          <label for="book_body">Opinion</label><br>
          <%= f.text_area :body %>
          </div>

          <div class="form-group">
          <%= f.submit 'Create Book' %>
          </div>
        <% end %>
      </form>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>img</td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>
