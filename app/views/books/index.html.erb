<!--com/books/-->
<h2>User info</h2>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
  </tbody>
</table>
<a class="btn btn-outline-secondary btn-block" href="users/#{@book.user_id}/edit"><i class="fas fa-user-cog"></i></a>

<h2>New book</h2>

<%= form_with model: Book.new do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_field :body %>

<%= f.submit 'Create Book' %>

<% end %>