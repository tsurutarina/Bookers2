
<div class="container">

  <% if @book.errors.any? %>
  <h2><%= @book.errors.count %> error prohibited this obj from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, method: :patch do |f| %>

      <div class="form-group">
        <label for="Book-tatle">Title</label><br>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <label for="Book-body">Opinion</label><br>
        <%= f.text_area :body %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update Book' %>
      </div>

      <% end %>

      <%= link_to 'Show' ,"/books/#{@book.id}" %>
      |
      <%= link_to 'Back', '/books' %>
    </div>
  </div>
</div>