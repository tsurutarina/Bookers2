
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, method :patch do |f| %>

      <div class="form-group">
        <label for="Book-tatle">Title</label><br>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <label for="Book-body">Opinion</label><br>
        <%= f.text_area :body %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update Book' %>
      </div>

      <% end %>

      <%= link_to 'Show' ,"/books/#{@book.id}" %>
      |
      <%= link_to 'Back', '/books' %>
    </div>
  </div>
</div>